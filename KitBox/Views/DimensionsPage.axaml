<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:KitBox.ViewModels"
             x:Class="KitBox.Views.DimensionsPage"
             x:DataType="vm:DimensionsViewModel">

    <Design.PreviewConfiguration>
        <Design />
    </Design.PreviewConfiguration>

    <StackPanel Margin="20" Spacing="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Configuration des dimensions"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="Black"/>

        <TextBlock Text="Cette page est actuellement vierge. Bientôt, les menus déroulants apparaîtront ici !"
                   FontStyle="Italic"
                   Opacity="0.6"
                   TextAlignment="Center"
                   Foreground="Black"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
            <Button Content="Retour à l'accueil"
                    Command="{Binding GoBackCommand}"
                    Background="Gray" />

            <Button Content="Suivant"
                    Command="{Binding NextCommand}"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</UserControl>