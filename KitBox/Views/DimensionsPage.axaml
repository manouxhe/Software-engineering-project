<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:KitBox.ViewModels"
             x:Class="KitBox.Views.DimensionsPage"
             x:DataType="vm:DimensionsViewModel">

    <StackPanel Margin="40" Spacing="30" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="400">

        <TextBlock Text="Configuration de l'Armoire"
                   FontSize="28" FontWeight="Bold"
                   Foreground="#1a1a1a" HorizontalAlignment="Center"/>

        <TextBlock Text="SÃ©lectionnez les dimensions globales de votre meuble."
                   TextWrapping="Wrap" TextAlignment="Center" Opacity="0.6"
                   Foreground="Black"/>

        <StackPanel Spacing="10">
            <TextBlock Text="Largeur (cm)" FontWeight="SemiBold" Foreground="Black"/>
            <ComboBox ItemsSource="{Binding AvailableWidths}"
                      SelectedItem="{Binding SelectedWidth}"
                      HorizontalAlignment="Stretch"
                      PlaceholderText="Choisir..."/>
        </StackPanel>

        <StackPanel Spacing="10">
            <TextBlock Text="Profondeur (cm)" FontWeight="SemiBold" Foreground="Black"/>
            <ComboBox ItemsSource="{Binding AvailableDepths}"
                      SelectedItem="{Binding SelectedDepth}"
                      HorizontalAlignment="Stretch"
                      PlaceholderText="Choisir..."/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
            <Button Content="Annuler" Classes="secondary" Command="{Binding GoBackCommand}" />

            <Button Classes="primary"
                    Content="Valider et Configurer"
                    Command="{Binding NextCommand}"
                    Padding="20,10"/>
        </StackPanel>

    </StackPanel>
</UserControl>